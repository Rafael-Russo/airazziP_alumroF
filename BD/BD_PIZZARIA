CREATE DATABASE pizzaria;
USE pizzaria;

CREATE TABLE Cliente (
id_cliente INT PRIMARY KEY NOT NULL,
nome_cliente VARCHAR(100),
telefone_cliente VARCHAR(20),
endereco_cliente VARCHAR(200)
);

CREATE TABLE Ingrediente (
id_ingrediente INT PRIMARY KEY NOT NULL,
nome_ingrediente VARCHAR(100),
preco_ingrediente DOUBLE (10,10),
quantidade_ingrediente FLOAT,
unidade_medida VARCHAR(20)
);

CREATE TABLE Cardapio (
id_pizza INT PRIMARY KEY NOT NULL,
nome_pizza VARCHAR(100),
preco_pizza DOUBLE (10,10),
img_pizza VARCHAR(150)
);

CREATE TABLE Pedido (
id_pedido INT PRIMARY KEY NOT NULL,
id_cliente INT PRIMARY KEY NOT NULL
);

CREATE TABLE Qnt_Cardapio (
id_cardapio INT PRIMARY KEY NOT NULL,
id_ingrediente_card INT PRIMARY KEY NOT NULL,
FOREIGN KEY (id_cardapio) REFERENCES Cardapio(id_pizza),
FOREIGN KEY (id_ingrediente_Card) REFERENCES ingrediente(id_ingrediente)
);

CREATE TABLE Qnt_Adicionais (
id_adicionais INT PRIMARY KEY NOT NULL,
id_adicionais_card INT PRIMARY KEY NOT NULL,
FOREIGN KEY (id_adicionais) REFERENCES Pedido(id_pedido),
FOREIGN KEY (id_adicionais_Card) REFERENCES Pedido(id_pedido)
);